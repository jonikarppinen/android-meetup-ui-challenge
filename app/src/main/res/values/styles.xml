<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

    </style>

    <style name="ContentText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentContainer">
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
    </style>

</resources>
